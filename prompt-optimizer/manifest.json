{
  "manifest_version": 3,
  "name": "Prompt Optimizer",
  "version": "2.0",
  "description": "AI-powered prompt rewriting, text extraction, and floating assistant bar.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ]
}
